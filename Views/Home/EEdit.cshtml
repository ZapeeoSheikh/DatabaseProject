@using MyWebProject.Models
@model Enrollment

<h2>Enrollment Edit</h2>



<div class="container col-lg-3 col-lg-push-3">
    <div class="panel  panel-primary ">
        <div class="panel-heading">
            Edit Enrollment @Model.Id
        </div>
        <div class="panel-body ">
            <form action="/Home/EEdit" method="post">
                <input type="hidden" value="@Model.Id">
                <div class="form-group">
                    <label for="email"> Joining Date :</label>
                    <input type="text" class="form-control" id="email" name="JoinOndate" value="@Model.JoinOndate">
                </div>
                <div class="form-group">
                    <label for="email"> Course Id :</label>
                    <input type="text" class="form-control" id="email" name="CourseId" value="@Model.CourseId">
                </div>
                <div class="form-group">
                    <label for="semail"> Student Id :</label>
                    <input type="text" class="form-control" id="semail" name="StudentId" value="@Model.StudentId">
                </div>

                <button type="submit" class="btn btn-primary">Edit Now</button>
            </form>
        </div>
    </div>
</div>