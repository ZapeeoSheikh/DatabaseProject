@using MyWebProject.Models

@model List<Course>

<h2>Course Details </h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                ID
            </th>

            <th>
                Title
            </th>

            <th>
                Cost
            </th>

            <th>
                Description
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Cost
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <a href="/Home/CView/@item.Id"><span class="glyphicon glyphicon-eye-open"></span></a> |
                    <a href="/Home/CEdit/@item.Id"><span class="glyphicon glyphicon-edit"></span></a> |
                    <a href="/Home/CDelete/@item.Id"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>