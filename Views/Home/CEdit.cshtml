@using MyWebProject.Models
@model Course
@{
    ViewBag.Title = "CEdit";
}


<div class="container col-lg-3 col-lg-push-3">
    <div class="panel  panel-primary ">
        <div class="panel-heading">
            Edit Course Details @Model.Id
        </div>
        <div class="panel-body ">
            <form action="/Home/CEdit" method="post">
                <input type="hidden" value="@Model.Id">
                <div class="form-group">
                    <label for="email"> Cnic Number :</label>
                    <input type="text" class="form-control" id="email" name="Name" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label for="email">Cost :</label>
                    <input type="email" class="form-control" id="email" name="cost" value="@Model.Cost">
                </div>
                <div class="form-group">
                    <label for="email">Description :</label>
                    <input type="email" class="form-control" id="email" name="desc" value="@Model.Description">
                </div>


                <button type="submit" class="btn btn-primary">Add Now</button>
            </form>
        </div>
    </div>
</div>